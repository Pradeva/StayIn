<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="272dp"
    android:background="@drawable/bg_card">

    <ImageView
        android:id="@+id/place_image_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/changie" />

    <TextView
        android:id="@+id/place_name_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:text="Changie Airport,"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_image_history" />

    <TextView
        android:id="@+id/country_name_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_medium"
        android:text="Singapore"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/place_name_history"
        app:layout_constraintTop_toBottomOf="@+id/place_name_history" />

    <TextView
        android:id="@+id/price_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="IDR 1,299,000"
        android:textColor="#BC2323"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="@+id/place_name_history"
        app:layout_constraintTop_toBottomOf="@+id/country_name_history" />
</androidx.constraintlayout.widget.ConstraintLayout>