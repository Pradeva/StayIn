<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card">

    <ImageView
        android:id="@+id/place_image_history"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/changie"
        tools:layout_editor_absoluteX="-1dp" />

    <TextView
        android:id="@+id/place_name_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_medium"
        android:text="Changie Airport,"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/place_image_history"
        app:layout_constraintTop_toTopOf="@+id/place_image_history" />

    <TextView
        android:id="@+id/country_name_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_medium"
        android:text="Singapore"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/place_name_history"
        app:layout_constraintTop_toBottomOf="@+id/place_name_history" />

    <TextView
        android:id="@+id/price_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="@font/poppins"
        android:text="IDR 1,299,000"
        android:textColor="#BC2323"
        app:layout_constraintStart_toStartOf="@+id/place_name_history"
        app:layout_constraintTop_toBottomOf="@+id/country_name_history" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:drawableRight="@drawable/ic_rate"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>